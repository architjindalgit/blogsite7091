<div class="container">
<div class="row">
  <div class="col-lg-6 td">
    <h3>Register below</h3>
  </div>
  <div class="col-lg-6 td">
<h3 >Login</h3>
  </div>
       <div class="col-lg-6 fm">
        <form class="ui form" method="POST" action="/createUser">
            <div class="field">
              <label>Enter your Name</label>
              <input type="text" name="user[name]" placeholder="Your Name" required>
            </div>
            <div class="field">
              <label>Username</label>
              <input type="text" name="user[username]" placeholder="Username" required>
            </div>
            <div class="field">
                <label>Password</label>
              <input type="password" name="user[password]" placeholder="Password" required>
            </div>
            <button class="ui button" type="submit">Submit</button>
          </form>
       </div>
       <div class="col-lg-6 fm">
        <form class="ui form" action="/login" method="GET">
            <div class="field">
              <label>Username</label>
              <input type="text" name="username" placeholder="Username" required>
            </div>
            <div class="field">
              <label>Password</label>
              <input type="text" name="password" placeholder="Password" required>
            </div>
            <button class="ui button" type="submit">Submit</button>
          </form>
       </div> 
       <div class="col-lg-6">
          <% if(alreadytaken) { %>
            <div class="alert alert-info at" role="alert">
                Username already taken. Try another one.
              </div>
            <% } %>
       </div>
       <div class="col-lg-6 errlogin">
       <% if(!todisplay) { %>
        <div class="alert alert-danger" role="alert">
            Username or Password entered by you is incorrect.   Please try again.
          </div>
        <% } %>
       </div>
    </div>
</div>
